@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <title>Cart</title>
</head>
<body>
    <h1 style="color:darkorange; font-weight:bold;">Sepetim</h1>
    <table class ="table-bordered"  cellpadding="4" cellspacing="4" border="1">
        <tr style="text-align:center;">
            <th scope="col" width="150px" height="100px">İşlem</th>
            <th scope="col" width="150px" height="100px">Ürün Kodu</th>
            <th scope="col" width="150px" height="100px">Ürün Adı</th>
            <th scope="col" width="150px" height="100px">Fotoğraf</th>
            <th scope="col" width="150px" height="100px">Fiyat</th>
            <th scope="col" width="150px" height="100px">Adet</th>
            <th scope="col" width="150px" height="100px">Stok Durumu</th>
            <th scope="col" width="150px" height="100px">Sepet Tutarı</th>
        </tr>
        @foreach (var item in ViewBag.cart)
        {
        <tr style="text-align:center;">
            <td scope="row"><a style="color:red;font-weight:bold;" asp-controller="cart" asp-action="remove" asp-route-id="@item.Product.Id">Sil</a></td>
            <td style="color:black;font-style:italic;">@item.Product.Id</td>
            <td style="color:darkblue;">@item.Product.Name</td>
            <td><img src="~/images/@item.Product.Photo" width="100" /> </td>
            <td>@item.Product.Price TL</td>
            <td>@item.Quantity</td>
            @if (@item.Stock > 0)
            {
                <td>Stokta var ( @item.Stock adet )</td>
            }
            else
            {
                <td style="color:red; font-weight:bold; font-style:italic;">Stoktaki son ürünü sepetinize eklediniz!</td>

            }
                <td>@(item.Product.Price * item.Quantity)  TL</td>
        </tr>
        }
        <tr style="text-align:center;">
            <td align="right" colspan="7">Toplam</td>
            <td>
                @ViewBag.total  TL
            </td>
        </tr>
    </table>
    <br>
    <a style = "color:cornflowerblue;font-weight:bold; font-size:large;" asp-controller="product" asp-action="index">Alışverişe Devam Et</a>

</body>
</html>